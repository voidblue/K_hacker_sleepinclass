<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/maincolor"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_attendant"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/maincolor"
            android:subtitleTextColor="#555555"
            android:titleTextAppearance="@color/colorPrimaryDark"
            android:titleTextColor="#555555"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_studentname_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="textview"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_studentmajor_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_studentcode_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"


        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/attand_date_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:text="0000년 00월 00일 0요일"
            android:textAlignment="center"
            android:textSize="20dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_attand_st"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="1"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/showMonthlyAttandant_st"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="주차별로 보기"
        android:textAlignment="center" />


</LinearLayout>
