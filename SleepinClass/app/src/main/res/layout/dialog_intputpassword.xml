<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="35dp"
    tools:context="com.example.voidbluelabtop.sleepinclass.FORPROFESSOR.InputpasswordDialog"
    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="강의 비밀번호를 입력하세요."
        android:textColor="#000000"
        android:textSize="20dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/btn_password_accept" />

    <EditText
        android:id="@+id/ET_inputpassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:text="" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_password_accept"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:text="확인"
            android:background="@drawable/buttonstyle"
            app:layout_constraintLeft_toLeftOf="@+id/ET_inputpassword"
            app:layout_constraintTop_toBottomOf="@+id/ET_inputpassword"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <Button
            android:background="@drawable/buttonstyle"
            android:id="@+id/btn_password_cancel"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:text="취소" />
    </LinearLayout>

</LinearLayout>
